<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Dummy content. -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:background="@color/colorWhite"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:layout_marginRight="3dp"
            >
        <ImageView
            android:id="@+id/item_image_left_iv_holder"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
            <TextView
                android:id="@+id/brand_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_image_left_iv_holder"
                android:text="LIFESTYLE"
                android:textColor="@color/colorBlack"
                android:textSize="10dp"
                />

            <TextView
                android:id="@+id/item_name_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/brand_left_tv"
                android:text="Item name"
                android:textColor="@color/colorGrey"
                android:lines="2"
                android:maxLines="3"
                android:textSize="13dp"
                />
            <TextView
                android:id="@+id/item_price_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_name_left_tv"
                android:text="AED"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:textSize="13dp"
                />
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:layout_marginLeft="3dp"
        >
        <ImageView
            android:id="@+id/item_image_right_iv_holder"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
        <TextView
            android:id="@+id/brand_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_image_right_iv_holder"
            android:text="LIFESTYLE"
            android:textColor="@color/colorBlack"
            android:textSize="10dp"
            />

        <TextView
            android:id="@+id/item_name_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/brand_right_tv"
            android:text="Item name"
            android:textColor="@color/colorGrey"
            android:lines="2"
            android:maxLines="3"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/item_price_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name_right_tv"
            android:text="AED"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:textSize="13dp"
            />
    </RelativeLayout>
</LinearLayout>
</RelativeLayout>
